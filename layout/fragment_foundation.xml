<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Foundation"
    android:layout_marginBottom="80dp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/kissView"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kissTitle"
                android:layout_below="@+id/kissView"
                android:layout_marginTop="3dp"
                android:textColor="#228b22"
                android:textStyle="bold"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kissSubTitle"
                android:layout_below="@+id/kissTitle"
                android:layout_marginTop="3dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:layout_marginLeft="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kissContent"
                android:layout_below="@+id/kissSubTitle"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="15dp"
                android:text=""
                android:layout_marginLeft="3dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kissContent"
                android:layout_marginTop="5dp"
                android:id="@+id/kisscard">
                <android.support.v7.widget.CardView
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:id="@+id/kissLearn"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:layout_marginLeft="2dp"
                        android:textStyle="bold"
                        android:padding="5dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="20dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:id="@+id/kissDonate">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/donate"
                        android:layout_marginLeft="20dp"
                        android:text="DONATE"
                        android:padding="5dp"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/kiitView"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/kisscard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kiitTitle"
                android:layout_below="@+id/kiitView"
                android:layout_marginTop="-3dp"
                android:textColor="#228b22"
                android:textStyle="bold"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kiitSubTitle"
                android:layout_below="@+id/kiitTitle"
                android:layout_marginTop="3dp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=""
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kiitContent"
                android:layout_below="@+id/kiitSubTitle"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="15dp"
                android:text=""
                android:layout_marginLeft="3dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kiitContent"
                android:layout_marginTop="5dp">
                <android.support.v7.widget.CardView
                    android:layout_width="115dp"
                    android:layout_height="35dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cardViewKiit"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:layout_marginLeft="2dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:id="@+id/kiitLearn"/>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/artView"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/cardViewKiit"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artTitle"
                    android:layout_below="@+id/artView"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:background="#FFFF00"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginLeft="20dp"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artContent"
                    android:layout_below="@+id/artTitle"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:text=""
                    android:layout_marginLeft="3dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/artContent"
                    android:layout_marginTop="5dp">
                    <android.support.v7.widget.CardView
                        android:layout_width="115dp"
                        android:layout_height="35dp"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardElevation="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/cardViewArt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEARN MORE"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>