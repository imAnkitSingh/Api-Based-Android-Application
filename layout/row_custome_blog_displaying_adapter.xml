<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#BFC9CA">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="20dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_marginLeft="3dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BlogBaseContent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleBlog"
                android:textStyle="bold"
                android:text=""
                android:textSize="20dp"
                android:layout_marginLeft="7dp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgBlog"
                android:layout_below="@+id/titleBlog"
                android:layout_marginTop="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/imgBlog"
                android:id="@+id/imgBlogg"
                android:layout_marginRight="6dp"
                android:background="#1fe05f"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blogexcerpt"
                android:textStyle="normal"
                android:layout_below="@+id/imgBlogg"
                android:layout_marginTop="1dp"
                android:visibility="visible"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blogexcerpt"
                android:id="@+id/knowMoreBlog"
                android:clickable="true"
                android:visibility="visible">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="20dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read More..."
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:id="@+id/knowMoreClickableBlog"
                        />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>