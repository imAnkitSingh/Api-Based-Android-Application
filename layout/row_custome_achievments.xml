<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="220dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="20dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginStart="3dp"
            tools:ignore="RtlCompat"
            android:id="@+id/cardViewAchievment">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/years"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/years"
                    android:layout_marginTop="8dp"
                    android:id="@+id/bubbleone"
                    android:background="@drawable/circular_image"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstAchievment"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/years"
                    android:layout_toRightOf="@+id/bubbleone"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/bubbletwo"
                    android:background="@drawable/circular_image"
                    android:layout_marginStart="2dp"
                    android:layout_below="@+id/firstAchievment"
                    android:layout_marginLeft="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SecondAchievment"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/firstAchievment"
                    android:layout_toRightOf="@+id/bubbletwo"
                    android:layout_marginLeft="10dp" />
                <!-- <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"> -->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="20dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/knowMoreClickableAchiev"
                    android:layout_below="@+id/SecondAchievment">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read More"
                        android:padding="5dp"
                        android:textStyle="bold"
                        />
                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>






</LinearLayout>

